{{ ansible_managed | comment }}

[Unit]
Description=Process Exporter
After=network.target

[Service]
Type=simple
User={{ process_exporter_system_user }}
Group={{ process_exporter_system_group }}
ExecStart=/usr/local/bin/process_exporter \
  -config.path {{ process_exporter_config_directory }}/process_exporter.yml

SyslogIdentifier=process_exporter
Restart=always

PrivateTmp=yes
ProtectHome=yes
NoNewPrivileges=yes

[Install]
WantedBy=multi-user.target
